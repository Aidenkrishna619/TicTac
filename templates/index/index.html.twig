{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">

        <h1 class="title">Tic Tac Toe</h1>

        <div class="alert" role="alert" id="winner"></div>

        <table class="table" data-finished="false">
            <tr class="first-row">
                <td class="col-md-4 align-middle text-center" data-x=0 data-y=0 data-unit=""></td>
                <td class="col-md-4 align-middle text-center middle-table-td" data-x=1 data-y=0 data-unit=""></td>
                <td class="col-md-4 align-middle text-center" data-x=2 data-y=0 data-unit=""></td>
            </tr>
            <tr>
                <td class="col-md-4 align-middle text-center" data-x=0 data-y=1 data-unit=""></td>
                <td class="col-md-4 align-middle text-center middle-table-td" data-x=1 data-y=1 data-unit=""></td>
                <td class="col-md-4 align-middle text-center" data-x=2 data-y=1 data-unit=""></td>
            </tr>
            <tr>
                <td class="col-md-4 align-middle text-center" data-x=0 data-y=2 data-unit=""></td>
                <td class="col-md-4 align-middle text-center middle-table-td" data-x=1 data-y=2 data-unit=""></td>
                <td class="col-md-4 align-middle text-center" data-x=2 data-y=2 data-unit=""></td>
            </tr>
        </table>
        <button class="btn btn-block btn-dark reset">Reset</button>
    </div>
    <style>
        body {
            padding-top: 60px
        }

        .title {
            text-align: center;
            margin-bottom: 50px;
        }

        .table {
            width: 75%;
            margin: 0 auto;
            table-layout: fixed;
            word-wrap: break-word;
        }

        .table tr td {
            height: 150px;
            width: auto;
        }

        .middle-table-td {
            border-left: 1px solid #dee2e6;
            border-right: 1px solid #dee2e6;
        }

        .first-row td {
            border-top: 0 none;
        }

        .reset {
            margin-top: 30px;
        }

        .alert {
            text-align: center;
        }

    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="../../public/assets/main.js"></script>
{% endblock %}
